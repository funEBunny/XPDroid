<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.funebunny.xpdroid.main.ui.CrearObjetivoActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/importe"
        android:layout_marginTop="34dp"
        android:hint="@string/importe"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/fecha"
        android:hint="@string/fecha"
        android:clickable="false"
        android:layout_below="@+id/importe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:src="@drawable/ic_calendar"
        android:contentDescription="@string/calendario"
        android:onClick="mostrarDatePicker"
        android:layout_alignBottom="@+id/fecha"
        android:layout_toRightOf="@+id/fecha"
        android:layout_toEndOf="@+id/fecha" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/duracion"
        android:hint="@string/duracion"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/fecha"
        android:layout_alignLeft="@+id/fecha"
        android:layout_alignStart="@+id/fecha"
        android:layout_toLeftOf="@+id/datePicker"
        android:layout_toStartOf="@+id/datePicker" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/descripcion"
        android:layout_marginTop="30dp"
        android:hint="@string/descripcion"
        android:layout_below="@+id/duracion"
        android:layout_alignRight="@+id/duracion"
        android:layout_alignEnd="@+id/duracion"
        android:layout_alignLeft="@+id/duracion"
        android:layout_alignStart="@+id/duracion" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guardar"
        android:id="@+id/guardar"
        android:onClick="guardarObjetivo"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/descripcion"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
