<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.funebunny.xpdroid.main.ui.CrearGastoProgramableActivity"
    android:onClick="mostrarTimePicker">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/importe"
        android:layout_marginTop="25dp"
        android:hint="@string/importe"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/timePicker"
        android:layout_toStartOf="@+id/timePicker" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/horario"
        android:layout_marginTop="35dp"
        android:hint="@string/horario"
        android:layout_below="@+id/importe"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:src="@drawable/ic_time"
        android:layout_alignBottom="@+id/horario"
        android:layout_toRightOf="@+id/horario"
        android:layout_toEndOf="@+id/horario"
        android:contentDescription="@string/reloj"
        android:onClick="mostrarTimePicker" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/repeticion"
        android:hint="@string/repeticion"
        android:layout_below="@+id/horario"
        android:layout_toLeftOf="@+id/timePicker"
        android:layout_marginTop="35dp"
        android:layout_alignLeft="@+id/horario"
        android:layout_alignStart="@+id/horario" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/categoria"
        android:hint="@string/categoria"
        android:layout_centerVertical="true"
        android:layout_below="@+id/repeticion"
        android:layout_marginTop="35dp"
        android:layout_toLeftOf="@+id/timePicker"
        android:layout_alignLeft="@+id/repeticion"
        android:layout_alignStart="@+id/repeticion" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/descripcion"
        android:layout_below="@+id/categoria"
        android:layout_marginTop="35dp"
        android:layout_alignRight="@+id/categoria"
        android:layout_alignEnd="@+id/categoria"
        android:layout_alignLeft="@+id/categoria"
        android:layout_alignStart="@+id/categoria"
        android:hint="@string/descripcion" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guardar"
        android:id="@+id/guardar"
        android:onClick="guardarGastoProgramable"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/descripcion"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
