<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gastos_favoritos_list_item_ll_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:textAppearance="?android:attr/textAppearanceListItemSmall"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    android:onClick="tratarGastoFavorito">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:id="@+id/gastos_favoritos_list_item_ll_datos1">

        <TextView android:id="@+id/gastos_favoritos_list_item_tv_categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="#ff000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:id="@+id/gastos_favoritos_list_item_ll_datos2">

        <TextView android:id="@+id/gastos_favoritos_list_item_tv_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:ellipsize="end"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:singleLine="true"
            android:maxWidth="180dp" />

        <TextView android:id="@+id/gastos_favoritos_list_item_tv_importe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="right"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textColor="#ffff8100"
            android:singleLine="true" />

    </LinearLayout>

</LinearLayout>
