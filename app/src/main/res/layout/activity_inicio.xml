<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.funebunny.xpdroid.main.ui.activity.InicioActivity"
    android:orientation="vertical"
    android:id="@+id/inicio_activity_ll_main"
    android:background="#ff000000">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/activity_inicio_rl_xpdroid_logo"
        android:background="#ff000000">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_inicio_im_xpdroid_logo"
            android:src="@drawable/ic_xpdroid_full"
            android:layout_centerInParent="true" />
    </RelativeLayout>
</LinearLayout>
