<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="com.funebunny.xpdroid.main.ui.activity.CrearRecordatorioActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/activity_crear_gasto_et_fecha"
        android:hint="@string/fecha"
        android:clickable="false"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_crear_gasto_ib_date_picker"
        android:src="@drawable/ic_calendar"
        android:contentDescription="@string/calendario"
        android:onClick="mostrarDatePicker"
        android:layout_alignBottom="@+id/activity_crear_gasto_et_fecha"
        android:layout_toRightOf="@+id/activity_crear_gasto_et_fecha"
        android:layout_toEndOf="@+id/activity_crear_gasto_et_fecha" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/activity_crear_gasto_programable_et_horario"
        android:layout_marginTop="31dp"
        android:hint="@string/horario"
        android:layout_below="@+id/activity_crear_gasto_et_fecha"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibt_timePicker"
        android:src="@drawable/ic_time"
        android:contentDescription="@string/reloj"
        android:onClick="mostrarTimePicker"
        android:layout_alignBottom="@+id/activity_crear_gasto_programable_et_horario"
        android:layout_toRightOf="@+id/activity_crear_gasto_programable_et_horario"
        android:layout_toEndOf="@+id/activity_crear_gasto_programable_et_horario" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spn_repeticion"
        android:hint="@string/repeticion"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/activity_crear_gasto_programable_et_horario"
        android:layout_toLeftOf="@+id/ibt_timePicker"
        android:layout_alignLeft="@+id/activity_crear_gasto_programable_et_horario"
        android:layout_alignStart="@+id/activity_crear_gasto_programable_et_horario" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_crear_gasto_et_descripcion"
        android:hint="@string/descripcion"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/spn_repeticion"
        android:layout_alignStart="@+id/spn_repeticion"
        android:layout_alignRight="@+id/spn_repeticion"
        android:layout_alignEnd="@+id/spn_repeticion" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guardar"
        android:id="@+id/guardar"
        android:onClick="guardarRecordatorio"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/activity_crear_gasto_et_descripcion"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
